<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>


    <!--    <style name="AppBaseTheme" parent="Theme.AppCompat.Light" >-->
    <!--        <item name="android:windowNoTitle">true</item>-->
    <!--    </style>-->


    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="CollapsingTextAppearance.Inverse">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTheme2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme2" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorPrimary">#238d9c</item>
        <item name="colorPrimaryDark">#238d9c</item>
        <item name="colorAccent">#238d9c</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomFloatingStyle">

        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <!-- can hold src -->
        <item name="android:src">@drawable/ic_add_white_24dp</item>

    </style>

</resources>